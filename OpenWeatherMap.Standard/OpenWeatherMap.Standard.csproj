<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.8.0</Version>
    <Description>Standard Class library for getting weather from open weather map's api</Description>
    <PackageTags>standard library, weather, open weather map</PackageTags>
    <PackageReleaseNotes>Standard Class library for getting weather from open weather map's api</PackageReleaseNotes>
    <PackageLicenseUrl>https://github.com/vb2ae/OpenWeatherMap.Standard/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/vb2ae/OpenWeatherMap.Standard/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/vb2ae/OpenWeatherMap.standard</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <PackOnBuild>true</PackOnBuild>
    <PackageVersion>0.6.0</PackageVersion>
    <Authors>Ken Tucker </Authors>
    <PackageId>OpenWeatherMap.Standard</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
    <PackageReference Include="NuGet.Build.Packaging" Version="0.2.0" />
  </ItemGroup>

</Project>
